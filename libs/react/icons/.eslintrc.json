{
  "extends": [
    "plugin:@nx/react",
    "../../../.eslintrc.json",
    "plugin:storybook/recommended"
  ],
  "ignorePatterns": [
    "!**/*",
    "storybook-static",
    "**/*.stories.tsx"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "allow": ["^.*\\.svg$"]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "rules": {}
    }
  ]
}