{
  "name": "betterangels-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/betterangels-backend/betterangels_backend",
  "targets": {
    "lock": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry lock --no-update",
        "cwd": "apps/betterangels-backend"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "file": "Dockerfile",
        "push": true,
        "platforms": ["linux/amd64"],
        "cache-from": [
          "type=registry,ref=${ECR_REPO}:buildcache-${BRANCH_NAME}",
          "type=registry,ref=${ECR_REPO}:buildcache-main"
        ],
        "cache-to": [
          "type=registry,ref=${ECR_REPO}:buildcache-${BRANCH_NAME},image-manifest=true,mode=max"
        ],
        "metadata": {
          "images": ["${ECR_REPO}"],
          "tags": ["${DOCKER_TAG}"]
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo \"Creating ${IMAGE_JSON_NAME} file\"",
          "mkdir -p ${DIST_PATH}",
          "echo \"[{\\\"name\\\": \\\"app\\\", \\\"imageUri\\\": \\\"${ECR_REPO}:${DOCKER_TAG:-dev}\\\"}]\" > ${DIST_PATH}/${IMAGE_JSON_NAME}",
          "echo \"Zipping ${IMAGE_JSON_NAME}\"",
          "zip -j ${DIST_PATH}/${ZIP_NAME} ${DIST_PATH}/${IMAGE_JSON_NAME}",
          "echo \"Pusihing ${ZIP_NAME} to S3\"",
          "aws s3 cp ${DIST_PATH}/${ZIP_NAME} ${S3_BUCKET}/${ZIP_NAME}"
        ],
        "parallel": false
      }
    },
    "manage": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run python manage.py",
        "cwd": "apps/betterangels-backend"
      }
    },
    "migrate": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run python manage.py migrate",
        "cwd": "apps/betterangels-backend"
      }
    },
    "start": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run python manage.py runserver 0.0.0.0:8000",
        "cwd": "apps/betterangels-backend"
      }
    },
    "start-scheduler": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run celery -A betterangels_backend beat -S redbeat.RedBeatScheduler",
        "cwd": "apps/betterangels-backend"
      }
    },
    "start-worker": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run celery -A betterangels_backend worker -l INFO",
        "cwd": "apps/betterangels-backend"
      }
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "commands": [
          "poetry run flake8 --exit-zero --output-file ../../reports/apps/betterangels-backend/lint.txt",
          "poetry run black --check .",
          "poetry run isort . --check-only",
          "poetry run mypy --config-file=../../mypy.ini ."
        ],
        "cwd": "apps/betterangels-backend",
        "parallel": false
      }
    },
    "type-check": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "cwd": "apps/betterangels-backend",
        "command": "poetry run mypy --config-file=../../mypy.ini ."
      }
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/apps/betterangels-backend/unittests",
        "{workspaceRoot}/coverage/apps/betterangels-backend"
      ],
      "options": {
        "command": "poetry run python manage.py test",
        "cwd": "apps/betterangels-backend"
      }
    }
  },
  "tags": []
}
