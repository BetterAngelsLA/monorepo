{
  "name": "betterangels-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/betterangels-backend/betterangels_backend",
  "targets": {
    "lock": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry lock --no-update",
        "cwd": "apps/betterangels-backend"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "push": true,
        "platforms": ["linux/amd64"],
        "metadata": {
          "images": [
            "784154756963.dkr.ecr.us-west-2.amazonaws.com/betterangels-backend"
          ],
          "tags": ["type=sha"]
        }
      }
    },
    "manage": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run python manage.py",
        "cwd": "apps/betterangels-backend"
      }
    },
    "migrate": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run python manage.py migrate",
        "cwd": "apps/betterangels-backend"
      }
    },
    "start": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run python manage.py runserver 0.0.0.0:8000",
        "cwd": "apps/betterangels-backend"
      }
    },
    "start-celery": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "celery -A betterangels_backend worker -l INFO",
        "cwd": "apps/betterangels-backend"
      }
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "commands": [
          "poetry run flake8 --exit-zero --output-file ../../reports/apps/betterangels-backend/lint.txt",
          "poetry run mypy --config-file=../../mypy.ini ."
        ],
        "cwd": "apps/betterangels-backend",
        "parallel": false
      }
    },
    "type-check": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "cwd": "apps/betterangels-backend",
        "command": "poetry run mypy --config-file=../../mypy.ini ."
      }
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/apps/betterangels-backend/unittests",
        "{workspaceRoot}/coverage/apps/betterangels-backend"
      ],
      "options": {
        "command": "poetry run python manage.py test",
        "cwd": "apps/betterangels-backend"
      }
    }
  },
  "tags": []
}
